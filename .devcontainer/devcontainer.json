{
  "image": "ubuntu:latest",
  "features": {},
  
  "postCreateCommand": "chmod +x ./scripts/startup.sh && ./scripts/startup.sh",  // Caminho para o seu script startup.sh

  "mounts": [
    "source=${localWorkspaceFolder}/scripts,target=/workspace/scripts,type=bind"
  ],
  
  "extensions": [
    "ms-azuretools.vscode-docker",
    "hashicorp.terraform",
    "pulumi.pulumi-vscode",
    "ms-vscode.ansible"
  ]
}
